<h2>User info</h2>
  <p><%= image_tag 'default-image.jpg' %></p>
<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
    <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinicn</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create ' %>
  <% end %>
<h2>Books</h2>
<% @books.each do |book| %>
<def>
  <%= link_to book_path(book.id) do %>
   <% image_tag book.get_image %>
  <% end %>
  <p>Title：<%= book.title %></p>
  <p>Body：<%= book.body %></p>
  <p>name：<%= book.user.name %></p>
</def>
<% end %>