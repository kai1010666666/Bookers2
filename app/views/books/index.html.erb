<h2>User info</h2>
<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
    <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinicn</h4>
  <%= f.text_area :body %>
    <%= f.submit 'Create ' %>
  <% end %>
<h2>Books</h2>
<% @books.each do |book| %>
<def>
  <%= image_tag book.get_image %>
  <p>投稿ユーザー画像：<%= image_tag 'default_image.jpg' %></p>
  <p>Title：<%= book.shop_name %></p>
  <p>Body：<%= book.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</def>
<% end %>